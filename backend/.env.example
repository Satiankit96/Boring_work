# Auth Module Environment Configuration
# ======================================
# Copy this file to .env and customize values
# NEVER commit .env to version control

# Application Environment
APP_ENV=development

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=change_me_min_32_characters_long_please_this_is_just_for_dev
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/auth.db

# CORS Origins (frontend URL)
CORS_ORIGINS=["http://localhost:5173"]

# ===================================
# AUTH MODE: "local" or "keycloak"
# ===================================
AUTH_MODE=local

# ===================================
# KEYCLOAK SETTINGS (only if AUTH_MODE=keycloak)
# ===================================
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=my-app
KEYCLOAK_CLIENT_ID=my-backend
KEYCLOAK_CLIENT_SECRET=backend-secret-change-in-production
KEYCLOAK_FRONTEND_CLIENT_ID=my-frontend
